    <%= form.date_select :dob, :start_year => 1950, :end_year => Date.current.year %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div class="field">
    <%= form.label :experience %>
    <%= form.number_field :experience %>
  </div>

  <div class="field">
  <%= form.label :core_skill %>
  <%= form.collection_select :skill_ids, CoreSkill.all,:id,:name,{},{multiple: true, size: 10} %>
  </div>  

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

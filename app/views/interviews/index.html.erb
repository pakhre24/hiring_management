<p id="notice"><%= notice %></p>

<h1>Interviews</h1>

<table>
  <thead>
    <tr>
      <th>Candidate</th>
      <th>Employee</th>
      <th>Round</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Remark</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @interviews.each do |interview| %>
      <tr>
        <td><%= interview.candidate.try(:name) %></td>
        <td><%= interview.employee.try(:name) %></td>
        <td><%= interview.round %></td>
        <td><%= interview.start_time %></td>
        <td><%= interview.end_time %></td>
        <td><%= interview.remarks %></td>
        <td><%= link_to 'Show', interview %></td>
        <td><%= link_to 'Edit', edit_interview_path(interview) %></td>
        <td><%= link_to 'Feedback', feedback_interview_path(interview) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Schedule Interview', new_interview_path %>
<%= link_to 'Back', root_path %>

